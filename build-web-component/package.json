{
  "name": "build-web-component",
  "version": "1.0.0",
  "description": "",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@webcomponents/webcomponentsjs": "^2.2.7"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "husky": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "rollup": "^1.4.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^4.0.4"
  },
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:counter": "rollup -c --environment folder:counter",
    "build:counterV2": "rollup -c --environment folder:counterV2",
    "start": "rollup -c rollup.dev.config.js --watch",
    "prettier:check": "prettier --check \"counter/**/*.js\"",
    "prettier:fix": "prettier --write \"counter/**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11"
  ]
}
